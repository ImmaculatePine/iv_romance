<h1 class="title">New media</h1>

<%= form_for @changeset, admin_media_object_path(@conn, :create), [as: :media_object], fn f -> %>
  <%= if @changeset.action do %>
    <div class="notification is-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="field">
    <%= label f, :embed_code, class: "label" %>
    <div class="control">
      <%= textarea f, :embed_code, class: "textarea" %>
      <%= error_tag f, :embed_code %>
    </div>
  </div>

  <div class="field">
    <%= label f, :title, class: "label" %>
    <div class="control">
      <%= text_input f, :title, class: "input" %>
      <%= error_tag f, :title %>
    </div>
  </div>

  <div class="field is-grouped">
    <div class="control">
      <%= submit "Submit", class: "button is-link" %>
    </div>
  </div>
<% end %>
